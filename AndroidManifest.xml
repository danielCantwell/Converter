<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.usc.danielcantwell.converter"
    android:versionCode="3"
    android:versionName="1.0.1" >

    <uses-sdk android:minSdkVersion="10" />

    <application
        android:icon="@drawable/convert_icon"
        android:label="@string/app_name" >
        <activity
            android:name=".Main"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".DistConvert"
            android:screenOrientation="portrait" />
        <activity android:name=".MassConvert"
            android:screenOrientation="portrait" />
        <activity android:name=".VolConvert"
            android:screenOrientation="portrait" />
        <activity android:name=".PresConvert"
            android:screenOrientation="portrait" />
        <activity android:name=".TempConvert"
            android:screenOrientation="portrait" />
        
    </application>

</manifest>